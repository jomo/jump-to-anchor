{
  "manifest_version": 2,

  "name": "__MSG_extensionName__",
  "description": "__MSG_extensionDescription__",
  "author": "Brett Zamir",
  "version": "0.6.0",
  "homepage_url": "https://github.com/brettz9/jump-to-anchor/",

  "permissions": ["contextMenus", "tabs"],

  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["lib/content.js"],
    "run_at": "document_end",
    "all_frames": true
  }],

  "background": {
    "scripts": ["lib/background.js"]
  },

  "icons": {
    "48": "icon.svg"
  },

  "default_locale": "en"
}